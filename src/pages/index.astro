---
import "../styles/global.css";
import Button from "../components/Button.astro";
import Posts from "./posts/index.astro";
import Layout from "../layouts/main.astro";
// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout title="Psyclescape Web">
  <section class="hero psychedelic">
    <div class="container bg-fuchsia-500">
      <h1 class="brutal-text-neon hrumble">Welcome to Our Site</h1>
      <p class="brutal-text-mono">
        Discover amazing events and connect with us
      </p>
      <a href="/events" class="cta-button cellophane-bounce trumble"
        >View Events</a
      >
    </div>
  </section>

  <section class="features">
    <div class="container">
      <Posts />
    </div>
  </section>
</Layout>
